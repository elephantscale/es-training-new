{
  "name": "essandbox",
  "version": "1.0.0",
  "description": "",
  "main": "index.html",
  "scripts": {
    "build:css": "npm run sass && npm run postcss",
    "clean": "rimraf css/*",
    "postcss": "postcss css/main.css -c postcss.config.js -o css/style.css",
    "sass": "node-sass --output-style expanded -o css src/sass",
    "serve": "lite-server",
    "build:all": "npm run build:css",
    "watch:css": "onchange \"src/sass\" -- npm run build:css",
    "watch:all": "npm-run-all -p serve watch:css",
    "postinstall": "npm run build:all && npm run watch:all",
    "start": "npm run build:all && npm run watch:all"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^7.0.1",
    "lite-server": "^2.3.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.5.2",
    "npm-run-all": "^4.0.2",
    "onchange": "^3.2.1",
    "postcss-cli": "^4.0.0",
    "postcss-flexbugs-fixes": "^3.0.0",
    "rimraf": "^2.6.1"
  }
}
